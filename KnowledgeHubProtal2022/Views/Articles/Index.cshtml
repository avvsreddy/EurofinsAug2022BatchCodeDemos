@model IEnumerable<KnowledgeHubProtal2022.Models.Entities.Article>
@using Humanizer;
@{
    ViewBag.Title = "Index";
}

<h2>Browse Articles @ViewBag.ToDay</h2>
@{Html.RenderPartial("_SearchArticlesPartialView");}

<br />
@{Html.RenderAction("CatagoryHyperlinks", "Articles");}




<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CatagoryID)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.PostedBy)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateSubmited)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <a href="@item.Url" target="_blank">@item.Title</a>
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Catagory.Name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.PostedBy)
            </td>
            <td>

                @Html.DisplayFor(modelItem => item.DateSubmited)
            </td>

        </tr>
    }

</table>
